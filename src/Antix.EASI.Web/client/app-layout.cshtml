@using System.Web.Optimization
@using Antix.EASI.Web.client
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
        <link rel="icon"
              type="image/png"
              href="/Content/Branding/Logo-Icon.png">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>@AppResources.Title</title>

        @Styles.Render("~/bundles/style")

    </head>

    <body ng-app="antix.easi" ng-controller="AppController" antix-season>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-inner container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse"
                            data-ng-click="collapse=!collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand site-title notranslate" href="#/">
                        @AppResources.Title
                    </a>
                </div>
                <div class="navbar-collapse collapse" role="navigation"
                     data-ng-class="{in:collapse}">
                    <div class="navbar-btn navbar-right">
                        <div class="btn-group" dropdown>
                            <a type="button" class="btn btn-default"
                               href="#/examinations/create">
                                <span class="fa fa-plus"></span>
                                <span class="fa fa-clipboard"></span>
                            </a>
                            <button type="button" class="btn btn-default dropdown-toggle" dropdown-toggle>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#/examinations/create">
                                        <span class="fa fa-plus"></span>
                                        <span class="fa fa-clipboard"></span>
                                        Add Examination
                                    </a>
                                </li>
                                <li>
                                    <a href create-examiner>
                                        <span class="fa fa-plus"></span>
                                        <span class="fa fa-user-md"></span>
                                        Add Examiner
                                    </a>
                                </li>
                                <li>
                                    <a href create-patient>
                                        <span class="fa fa-plus"></span>
                                        <span class="fa fa-user"></span>
                                        Add Patient
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <search-box></search-box>
                </div>
            </div>
        </div>

        <div class="page-body view-container">
            <div ui-view autoscroll="false" class="view-frame"></div>
        </div>

        <footer class="footer">
            <div class="container">
                <div class="navbar">
                    <p class="navbar-text">&copy; antix</p>
                </div>
            </div>
        </footer>

        <a-status></a-status>

        @Scripts.Render("~/bundles/script")

    </body>
</html>
