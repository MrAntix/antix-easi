<div>
    <div class="input-group">
        <input class="form-control" placeholder="(search)"
               ng-model="patientId"
               ng-model-options="{debounce:500}"
               typeahead="i.id as i.name for i in get($viewValue) | filter:$viewValue | limitTo:8"
               typeahead-input-formatter="format($model)" />
        <div class="input-group-btn">
            <a href="#/patients/{{patientId}}/edit" class="btn btn-default"
               ng-disabled="!patientId">
                <span class="fa fa-pencil"></span>
            </a>
            <button create-patient
                    class="btn btn-default">
                <span class="fa fa-plus"></span>
            </button>
        </div>
    </div>
</div>