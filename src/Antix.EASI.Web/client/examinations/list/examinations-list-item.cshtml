<div class="examinations-list-item" cell-layout-cell>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="btn-group">
                <a class="editButton btn btn-default"
                   ui-sref="examinations-edit({id:model.id})">
                    <span class="fa fa-ellipsis-h"></span>
                </a>
            </div>
            <h4 class="panel-title">
                <span class="fa fa-clipboard"></span>
                {{model | examinationTitle}}
            </h4>
        </div>
        <div class="panel-body">
            <div examination-eric
                 ng-model="eric"
                 class="examination-eric"></div>

            <div class="examinations-list-item-details">
                <div class="row">
                    <label class="col-sm-4">Patient</label>
                    <a ui-sref="patients-edit({id:model.patient.id})" class="col-sm-8">{{model.patient | patientName}}</a>
                </div>
                <div class="row">
                    <label class="col-sm-4">Examiner</label>
                    <a ui-sref="examiners-edit({id:model.examiner.id})" class="col-sm-8">{{model.examiner | examinerName}}</a>
                </div>
                <label>Notes</label>
                <div ng-bind-html="model.notes | textToHtml"></div>
            </div>
        </div>
    </div>
</div>