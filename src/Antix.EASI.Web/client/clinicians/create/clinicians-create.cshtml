<div id="page-home" class="page-content container">

    <ol class="breadcrumb row">
        <li><a href="#/">Home</a></li>
        <li><a href="#/clinicians/create">Create Clinician</a></li>
    </ol>

    <form name="form" class="form">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="fa fa-user-md"></span>
                    Create a new Clinician
                </h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input class="form-control"
                           name="name"
                           ng-model="data.name" />
                    
                    <div class="errors"
                         ng-messages="form.name.$error"
                         ng-if="form.name.$invalid">
                        <div ng-message="not-null">please enter a name</div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Identifier</label>
                    <input class="form-control"
                           name="identifier"
                           ng-model="data.identifier" />
                    <div class="errors"
                         ng-messages="form.name.$errors"
                         ng-if="form.identifier.$invalid">
                        <div ng-message="not-null">please enter an identifier</div>
                    </div>
                </div>
            </div>
            <div class="panel-footer clearfix">
                <div class="form-group">
                    <span class="pull-right">
                        <a class="btn btn-default"
                           ng-click="cancel()">
                            Cancel
                        </a>
                        <button class="btn btn-primary"
                                ng-click="create()">
                            Create
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </form>

</div>